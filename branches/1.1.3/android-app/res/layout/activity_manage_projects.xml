<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout style="@style/TitleBar">
        <ImageButton style="@style/TitleBarAction"
            android:src="@drawable/ic_title_home"
            android:onClick="onHomeClick" />

        <ImageView style="@style/TitleBarSeparator" />
        <eu.vranckaert.worktime.utils.view.CustomTextView
                style="@style/TitleBarText" android:text="@string/btn_manage_projects_title"/>

        <ImageView style="@style/TitleBarSeparator" />
        <ImageButton style="@style/TitleBarAction"
                     android:src="@drawable/ic_title_unlocked"
                     android:onClick="showHideFinishedProjects"
                     android:id="@+id/showHideFinishedProjectButton"/>
        <ImageView style="@style/TitleBarSeparator" />
        <ImageButton style="@style/TitleBarAction"
            android:src="@drawable/ic_title_add"
            android:onClick="onAddClick" />
    </LinearLayout>

    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
        <ListView android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:id="@android:id/list"
                  android:layout_above="@id/punch_bar_container"
                  android:layout_alignParentTop="true"/>
        <TextView android:id="@id/android:empty"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:text="@string/lbl_empty_project_list"/>

        <include layout="@layout/comp_start_stop_time_registration"/>
    </RelativeLayout>
</LinearLayout>
