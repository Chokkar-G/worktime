<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="12dp">
    <ImageView android:id="@id/btn_delete"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:src="@drawable/ic_delete"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"/>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="vertical"
                  android:layout_toLeftOf="@id/btn_delete">
        <TextView android:id="@+id/lbl_timereg_startdate"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/text_size_medium_list"/>
        <TextView android:id="@+id/lbl_timereg_enddate"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/text_size_medium_list"/>
        <TextView android:id="@+id/lbl_timereg_duration"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/WorkTimeInfoInList"/>

        <eu.vranckaert.worktime.utils.view.CustomTextView
                  android:id="@+id/lbl_timereg_projectname_taskname"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/WorkTimeInfoInList"
                  android:singleLine="true"
                  android:ellipsize="marquee"/>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:id="@+id/registrations_comment_view"
                      android:visibility="gone">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/WorkTimeInfoInList"
                      android:text="@string/lbl_registrations_comment"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/WorkTimeInfoInList"
                      android:text=" "/>
            <TextView android:id="@+id/lbl_registrations_comment"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/WorkTimeInfoInList"
                      android:singleLine="true"
                      android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>